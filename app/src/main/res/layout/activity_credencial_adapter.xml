<!-- activity_credencial_adapter.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Agrega el CheckBox -->
        <CheckBox
            android:id="@+id/checkBoxTramiteRealizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tramiteAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tramite: Credencial"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/checkBoxTramiteRealizado"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/matriculaAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tramiteAlumno"
            android:text="matricula"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nombreAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre"
            android:layout_below="@id/matriculaAlumno"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/paternoAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreAlumno"
            android:text="apelldio paterno"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/maternoAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="apelldio materno"
            android:layout_below="@id/paternoAlumno"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
